<main class={{ styles.container }}>
  <div class={{ styles.auth }}>
    <h1 class={{ styles.title }}>{{ title }}</h1>
    <form class={{ styles.form }} action="">

        <label class={{ styles.label }} for="email"><p>Login</p></label>
        <input id="email" name="email" type="email" placeholder="Почта">
        <p class={{ styles.error}}></p>

        <label class={{ styles.label }} for="login"><p>Login</p></label>
        <input id="login" name="login" type="text" placeholder="Логин">
        <p class={{ styles.error}}></p>

        <label class={{ styles.label }} for="first_name"><p>First name</p></label>
        <input id="first_name" name="first_name" type="text" placeholder="Имя">
        <p class={{ styles.error}}></p>

        <label class={{ styles.label }} for="last_name"><p>Last name</p></label>
        <input id="second_name" name="second_name" type="text" placeholder="Фамилия">
        <p class={{ styles.error}}></p>

                <label class={{ styles.label }} for="phone"><p>Password</p></label>
        <input id="phone" name="phone" type="phone" placeholder="Телефон">
        <p class={{ styles.error}}></p>

        <label class={{ styles.label }} for="password"><p>Password</p></label>
        <input id="password" name="password" type="password" placeholder="Пароль">
        <p class={{ styles.error}}></p>

        <label class={{ styles.label }} for="password_repeat"><p>Password (repeat)</p></label>
        <input id="password_repeat" name="password_repeat" type="password" placeholder="Пароль (ещё раз)">
        <p class={{ styles.error}}></p>



        <div class={{ styles.buttons }}>
          <button type="submit">Зарегистрироваться</button>
          <a href="/">Войти</a>
        </div>
    </form>
  </div>
</main>
